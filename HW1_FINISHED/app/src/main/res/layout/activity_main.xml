<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright">

        <RelativeLayout
            android:id="@+id/imgDerr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView

                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/derr" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgDerr"
            android:layout_centerHorizontal="true"
            android:text="Axo Derrmurr"
            android:textColor="@android:color/background_light"
            android:textSize="32sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    >

    <RelativeLayout
        android:id="@+id/LikeRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rellay1">

        <LinearLayout
            android:id="@+id/Line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Likes: "
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="200dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="25sp" />
        </LinearLayout>

        <Button
            android:id="@+id/LikeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Line1"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:padding="5dp"
            android:paddingTop="5dp"
            android:text="LIKE"
            android:textColor="@android:color/black"
            android:textSize="30sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Phonez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LikeRow"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 209 - 086850"
            android:textColor="#000000"
            android:textSize="16sp" />
        >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Emailz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Phonez"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/EmailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" axoDer@HurpDerp.com"
            android:textColor="#000000"
            android:textSize="16sp" />
        >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Bioz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Emailz"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/BioBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" I like to nibble on sand and bump into the glass"
            android:textColor="#000000"
            android:textSize="16sp" />
        >
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



            <ImageView
                android:id="@+id/pepep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/pepe" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mr.Pepe"
            android:textColor="@android:color/background_dark"
            android:textSize="35sp"
            android:gravity="center"
            android:layout_below="@+id/pepep"
            android:background="@android:color/holo_orange_light"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    >

    <RelativeLayout

        android:id="@+id/LikeRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rellay1">

        <LinearLayout
            android:id="@+id/Line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Likes: "
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="25sp" />
        </LinearLayout>

        <Button
            android:id="@+id/LikeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:text="LIKE"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:paddingRight="10dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Phonez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LikeRow"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 311 - 197961"
            android:textColor="#000000"
            android:textSize="20sp" />
        >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Emailz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Phonez"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/EmailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" pepe@defrog.com"
            android:textColor="#000000"
            android:textSize="20sp" />
        >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Bioz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Emailz"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/BioBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" I like to nibble on chicken tendies and sitting in the dark all day"
            android:textColor="#000000"
            android:textSize="20sp" />
        >
    </LinearLayout>

</RelativeLayout>